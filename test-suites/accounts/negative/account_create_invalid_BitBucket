---
# Validates Account creation with invalid data.

authors:BitBucket
  - shahanawaz ali

endpoint: /accounts
method: POST
auth: Default

# Auth required for this endpoint.

# Try using random chars for unique constriants fields.
# Required-fields: name, username/access-key and secret-key/password
# Unique Constraints Fields: nameaccount_create_valid_Jira.yaml
# Fields-Constraints
# name: Min 1 char, unique per org_id
# accounttype: required
# @Response --> {id, name, accounttype, access-key/username secret-key/password should be masked etc}
testCases:
  # invalid name
  - id: 1
    body: '{
        "name": " ",
        "accountType": "GitHub",
        "accessKey": "testing accessKey",
        "secretKey": "testing secretKey"
     }'
  - id: 2
    body: '{
        "name": " ",
        "accountType": "GitHub",
        "accessKey": "testing accessKey",
        "secretKey": "testing secretKey"
     }'
    # invalid accountType
  - id: 3
    body: '{
        "name": "Test-{{@Random | 12}}",
        "accountType": " ",
        "accessKey": "accessKey",
        "secretKey": "testing secretKey"
     }'
  - id: 4
    body: '{
        "name": "Test-{{@Random | 24}}",
        "accountType": " ",
        "accessKey": "testing accessKey",
        "secretKey": "testing secretKey"
     }'
     #invalid accessKey
  - id: 3
    body: '{
        "name": "Test-{{@Random | 12}}",
        "accountType": "GitHub",
        "accessKey": " ",
        "secretKey": "testing secretKey"
     }'
  - id: 4
    body: '{
        "name": "Test-{{@Random | 24}}",
        "accountType": "GitHub",
        "accessKey": " ",
        "secretKey": "testing secretKey"
     }'
         #invalid secretKey
  - id: 3
    body: '{
        "name": "Test-{{@Random | 12}}",
        "accountType": "GitHub",
        "accessKey": "accessKey",
        "secretKey": " "
     }'
  - id: 4
    body: '{
        "name": "Test-{{@Random | 24}}",
        "accountType": "GitHub",
        "accessKey": "testing accessKey",
        "secretKey": " "
     }'

assertions:
  - "@StatusCode == 200"
  - "@Response.errors == true"
  


cleanup:
  #- account_delete

severity: Minor
category: Negative

